---
import ThemeToggle from './ThemeToggle.astro';
---

<header>
  <div class="header-top">
    <div>
      <h1 id="site-name">Raveen Savinda Rathnayake</h1>
      <p class="tagline">Associate Technical Lead @ WSO2 LLC | MSc in CS</p>
    </div>
    <ThemeToggle />
  </div>
</header>

<style>
  header {
    margin-bottom: var(--space-md);
  }

  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-sm);
  }

  h1 {
    margin-bottom: 0.25rem;
  }

  .tagline {
    color: var(--text-secondary);
    font-size: 1rem;
    margin-bottom: 0;
  }
</style>
