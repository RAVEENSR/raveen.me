---
const roles = [
  { title: 'Associate Technical Lead', period: 'Feb 2024 — Present' },
  { title: 'Senior Software Engineer', period: 'Jun 2021 — Feb 2024' },
  { title: 'Software Engineer', period: 'Jul 2019 — Jun 2021' },
  { title: 'Software Engineering Intern', period: 'Jul 2017 — Jun 2018' },
];
---

<section id="experience">
  <h2>Experience</h2>
  <div class="company-block">
    <h3 class="company"><a href="https://wso2.com/about/team/raveen-rathnayake/" target="_blank" rel="noopener noreferrer">WSO2</a></h3>
    <div class="roles">
      {roles.map((role) => (
        <div class="role">
          <span class="title">{role.title}</span>
          <span class="period">{role.period}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .company-block {
    padding-left: var(--space-sm);
    border-left: 2px solid var(--border);
  }

  .company {
    color: var(--text);
    font-size: 1rem;
    margin-bottom: var(--space-sm);
  }

  .roles {
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
  }

  .role {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-sm);
  }

  .title {
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .period {
    font-size: 0.8rem;
    color: var(--text-secondary);
    white-space: nowrap;
    opacity: 0.7;
    margin-left: auto;
    text-align: right;
  }

  @media (max-width: 640px) {
    .role {
      flex-direction: column;
      gap: 0.1rem;
    }
  }
</style>
