  {
    label: 'writing',
    name: "Raveen's Blog",
    description: 'Software engineering & tech',
    url: 'https://www.blog.raveen.me',
  },
  {
    label: 'building',
    name: 'GitHub',
    description: 'Open source & personal projects',
    url: 'https://github.com/RAVEENSR',
  },
  {
    label: 'research',
    name: 'IEEE Papers',
    description: 'Published academic work',
    url: 'https://ieeexplore.ieee.org/author/37088335822',
  },
];

const achievements = [
  {
    label: 'award',
    name: 'Outstanding Contributions',
    description: 'WSO2, 2020',
  },
  {
    label: 'winner',
    name: 'Hackadev 3.0',
    description: 'UNDP Sri Lanka, 2017',
  },
  {
    label: 'finalist',
    name: 'IT Hack 2017',
    description: 'Informatics Institute of Technology',
  },
  {
