<section id="about">
  <h2>About</h2>
  <div class="about-content">
    <img
      id="profile-pic"
      src="/images/profile.png"
      alt="Raveen Savinda Rathnayake"
      width="100"
      height="100"
      loading="lazy"
    />
    <p class="bio">
      Interested in Software Engineering, Technology, and Sustainability.<br />
      Writing code to debug the real world.<br />
      An avid team player.
    </p>
  </div>
</section>

<style>
  .about-content {
    display: flex;
    gap: 1.25rem;
    align-items: center;
  }

  img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    border: 2px solid var(--border);
  }

  .bio {
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 0;
  }

  @media (max-width: 640px) {
    .about-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>

<script is:inline>
  (function () {
    var pic = document.getElementById('profile-pic');
    if (!pic) return;

    var clickCount = 0;
    var clickTimer;
    var audio = new Audio('/audio/super-max.mp3');

    pic.addEventListener('click', function () {
      clickCount++;
      clearTimeout(clickTimer);

      if (clickCount === 3) {
        clickCount = 0;
        audio.currentTime = 0;
        audio.play();
      } else {
        clickTimer = setTimeout(function () { clickCount = 0; }, 400);
      }
    });
  })();
</script>
